{% extends 'base.html.twig' %}

{% block body %}

    {# COLONNE G & D #}
    <div class="row">

        {# COLONNE GAUCHE #}
        <div id="colonneG" class="col-xs-6 ">
            <div class="row">
                <h2>Type</h2>
                {{ form_start(formSelect) }}{{ form_end(formSelect) }}
            </div>
            <div class="row">
                <h2>Catégories</h2>
                <div id="categories">
                    {% for category in categories %}
                        <button type="button" class="btn btn-{{ category.color }}" data-id="{{ category.id }}">
                            {{ category.name }}
                        </button>
                    {% endfor %}
                </div>
            </div>
            <div class="row">
                <h2>Objets</h2>
                <div id="objects" class="row displayNone">
                    {% for object in objects %}
                        <div id="object_{{ object.id }}" class="col-xs-2 object" onclick='copierColler("{{ object.id }}")'>{{ object.name }}</div>
                    {% endfor %}
                </div>
            </div>
        </div>

        {# COLONNE DROITE #}
        <div id="colonneD" class="col-xs-6 displayNone">

            {# ONGLET #}
            <ul class="nav nav-tabs">

                {# ROOMS #}
                {% for onglet in onglets %}
                    <li class="active"><a data-toggle="tab" href="#home">{{ onglet|capitalize }}</a></li>
                {% endfor %}

                {# + #}
                <li><a data-toggle="modal" class="addRoomPlus" href="#plus" data-target="#plus">+</a></li>

                {# ONGLET MODAL #}
                <div id="plus" class="modal fade" role="dialog">
                    <div class="modal-dialog">

                        {# ONGLET MODAL CONTENT #}
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Choisissez votre pièce à inventorier</h4>
                            </div>
                            <div class="modal-body">
                                <div class="row available-rooms-container">
                                    {% for room in rooms %}
                                        <div class="col-xs-12 col-sm-9 col-md-6 col-lg-6 available-room" data-room-type-id="Room{{ room.id }}" data-room-can-delete="true">
                                            <div class="row">
                                                <div class="col-xs-4"></div>
                                                <div class="col-xs-8">
                                                    <a href="{{ path('homepage', {
                                                        'room':room.name,
                                                    }) }}">{{ room.name|capitalize }}</a>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </ul>

            {# CONTENT #}
            <div class="tab-content right">
                <div id="inventory" class="inventory">
                    {% for userTag in userTags %}
                        <div id="{{ userTag.id }}" class="col-xs-2 tag2">
                            {{ userTag.name }}
                            <div id="div2_{{ userTag.id }}">
                                <input id="' + objet + 'Number" type="number" class="number" value="1">
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    {# RECAP #}
    <div id="recapitulatif" class="row displayNone">

        {# BOUTON #}
        <button type="button" class="btn btn-info btn-lg pull-right buttonModal" data-toggle="modal" data-target="#myModal">Récapitulatif</button>

        {# MODAL #}
        <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Récapitulatif de mon inventaire</h4>
                </div>
                <div class="modal-body">
                    <p>Mon inventaire est vide pour le moment</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    </div>

    {# RESET #}
    <div class="row">
        <form id="reset" method="post" action="">
            <input type="submit" class="" name="reset" value="Reset"/>
        </form>
    </div>

{% endblock %}

{% block stylesheets %}{% endblock %}
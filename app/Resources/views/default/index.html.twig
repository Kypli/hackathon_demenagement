{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">

        {# COLONNE GAUCHE #}
        <div class="col-xs-6 selector">
            {{ form_start(form) }}{{ form_end(form) }}
            <div class="row">
                <div id="object" class="object">
                    {% for tag in tags %}
                        <div class="col-xs-2 tag" onclick='copierColler("{{ tag }}")'>{{ tag }}</div>
                    {% endfor %}
                </div>
            </div>
        </div>

        {# COLONNE DROITE #}
        <div class="col-xs-6 selector">

            <div id="inventory" class="inventory">
                En cours
            </div>
            <div>
                <!-- Trigger the modal with a button -->
                <button type="button" class="btn btn-info btn-lg pull-right buttonModal" data-toggle="modal" data-target="#myModal">Récapitulatif</button>

                <!-- Modal -->
                <div id="myModal" class="modal fade" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Récapitulatif de mon inventaire</h4>
                            </div>
                            <div class="modal-body">
                                <p>Mon inventaire est vide pour le moment</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}

{% block stylesheets %}

{% endblock %}
